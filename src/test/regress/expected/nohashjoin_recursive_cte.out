/* recursive-cte关联外层 */
explain (costs false) select  a.ID,a.Name,
(
    with recursive cte as (
        select ID, PID, NAME
        from b
        where b.ID = a.ID
        union all
        select parent.ID,parent.PID,parent.NAME
        from cte as child join b as parent
        on child.pid=parent.id
    )
    select NAME from cte
    where cte.ID % 2 = 0
    limit 1
) cName
from a
order by 1,2;
                             QUERY PLAN                              
---------------------------------------------------------------------
 Sort
   Sort Key: a.id, a.name
   ->  Seq Scan on a
         SubPlan 2
           ->  Limit
                 CTE cte
                   ->  Recursive Union
                         ->  Seq Scan on b
                               Filter: (id = a.id)
                         ->  Merge Join
                               Merge Cond: (child.pid = parent.id)
                               ->  Sort
                                     Sort Key: child.pid
                                     ->  WorkTable Scan on cte child
                               ->  Sort
                                     Sort Key: parent.id
                                     ->  Seq Scan on b parent
                 ->  CTE Scan on cte
                       Filter: ((id % 2::numeric) = 0::numeric)
(19 rows)

